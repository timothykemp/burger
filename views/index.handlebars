<section class="section">
    <div class="container has-text-centered">
        <figure class="image">
            <img class="burger-image" src="./img/hamburger-image.png" alt="Burger Image by Jan Balog from Pixabay">
        </figure>
        <h1 class="title is-1">Eat Da Burger!</h1>
    </div>
</section>

<section class="section">
    <div class="container">
        <div class="columns is-centered">

            <div class="column is-4 has-background-white burger-list">
                <h2 class="title has-text-centered">Burgers to be eaten!</h2>

                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devoured=false}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>

            <div class="column is-4 has-background-white burger-list">
                <h2 class="title has-text-centered">Devoured burgers!</h2>

                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger-block devoured=true}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>

        </div>
    </div>
</section>

<section class="section">
    <div class="container">
        <h2>Add a Burger</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="name">
            </div>

            <button class="button is-primary" type="submit">Add Burger</button>

            <p>Enter the name of a burger you would like. Click "Submit" to save it.</p>
        </form>
    </div>
</section>